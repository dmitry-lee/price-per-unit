<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Floating label text style-->
    <style name="MyHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:editTextColor">@color/colorCyan</item>
    </style>

    <!--Input field style-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="MyText" parent="@style/AppTheme">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">30sp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:drawableEnd">@android:drawable/ic_menu_close_clear_cancel</item>
        <item name="android:drawableRight">@android:drawable/ic_menu_close_clear_cancel</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>
</resources>
